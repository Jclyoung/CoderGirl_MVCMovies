
@{

    ViewData["Title"] = "Movie Rating Edit";
}
@model CoderGirl_MVCMovies.Models.MovieRating

<h1>Edit Rating</h1>

<form asp-action="Edit" method="post">
    <label asp-for="MovieName"></label>
    <input readonly asp-for="MovieName" />


    <label asp-for="Rating"></label>
    <select id="Rating" name="Rating">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>

    <button type="submit">Update Rating</button>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
