@model List<CoderGirl_MVCMovies.Models.Director>

@{
    ViewData["Title"] = "Index";
}

<h1>Directors</h1>
<a asp-action="Create" id="add-new-director">Add a Director</a>

<table>

    <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Nationality</th>
    </tr>
    @foreach (var director in Model)
    {
        <tr id="@director.Id">
            <td>@director.LastFirst</td>
            <td>@director.BirthDate</td>
            <td>@director.Nationality</td>

            <td><a asp-controller="Director" asp-action="Edit" asp-route-id="@director.Id">Edit</a></td>
            <td><a asp-controller="Director" asp-action="Delete" asp-route-id="@director.Id">Delete</a></td>
            <td><a asp-controller="Director" asp-action="Create" asp-route-movieId="@director.Id">Rate</a></td>
        </tr>
    }
</table>










